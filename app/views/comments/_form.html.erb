<!-- Comments Form -->
<h5 class="card-header">Leave a Comment:</h5>
<div class="card-body">
  <%= simple_form_for([@user, post, post.comments.build]) do |f| %>
    <%= f.input :content %>
    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>
