<!-- Single Comment -->
<div class="media mb-4">
  <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
  <div class="media-body">
    <h5 class="mt-0"> by <%= link_to @user.name, '#'  %></h5>
    <%= comment.content %>
  </div>
  <%= link_to "Delete", [@user, comment.post, comment], method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
</div>
